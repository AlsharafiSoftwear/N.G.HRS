@model N.G.HRS.Areas.AttendanceAndDeparture.Models.OpeningBalancesForVacations
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}


@* ============================================= *@

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة بيانات الحظور والانصراف
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a asp-action="Index">الارصدة الافتتاحية للاجازات</a>
        </li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title"> الارصدة الافتتاحية للاجازات</h6>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <!-- Row -->
                    <div class="row">


                        <div class="col-sm-5">
                            <label asp-for="EmployeeId" class="form-label"></label>
                            <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="PublicHolidaysId" class="form-label"></label>
                            <select asp-for="PublicHolidaysId" class="form-control" asp-items="ViewBag.PublicHolidaysId"></select>
                        </div>
                        <div class="col-sm-3">

                            <label asp-for="Date" class="form-label"></label>
                            <div class="input-group flatpickr" id="flatpickr-date">
                                <input asp-for="Date" class="form-control" placeholder="أختر التاريخ" />
                                <span class="input-group-text input-group-addon" data-toggle><i data-feather="calendar"></i></span>
                            </div>
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">


                        <div class="col-sm-5">
                            <label asp-for="BalanceYear" class="form-label"></label>
                            <div class="input-group flatpickr" id="YearPicker">
                                <input asp-for="BalanceYear" class="form-control"  placeholder="أختر السنة" data-input data-inputmask="'alias': 'yyyy'" />
                                <span class="input-group-text input-group-addon" data-toggle><i data-feather="calendar"></i></span>
                            </div>
                            <span asp-validation-for="BalanceYear" class="text-danger"></span>
                        </div>
                        <div class="col-sm-4">
                            <label asp-for="Balance" class="form-label"></label>
                            <input asp-for="Balance" class="form-control" placeholder="الـــرصــيــد" />
                            <span asp-validation-for="Balance" class="text-danger"></span>
                        </div>

                    </div>
                    <br />
                    <!-- Row -->
                    <div class="row">
                        <div class="mb-12">
                            <label asp-for="Notes" class="form-label"></label>
                            <input asp-for="Notes" class="form-control" />
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="mb-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            
                            <a asp-action="Index">Back to List</a>
                        </div>                      
                    </div>
                    

                </form>
            </div>
        </div>
    </div>
</div>
@* ============================================= *@


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('#YearPicker').flatpickr({
            shorthand: true,
            altInput: true,
            wrap: true,
            dateFormat: "m-Y",

        });

    </script>
}
