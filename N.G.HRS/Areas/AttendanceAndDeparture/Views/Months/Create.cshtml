<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">  بيانات الشهور</h6>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Row -->
                    <div class="row">

                        <div class="col-sm-3">

                            <div class="col-mb-3">
                                <label asp-for="Month" class="form-label"></label>
                                <div class="input-group flatpickr flatpickr-date">
                                    <input asp-for="Month" id="Month" class="form-control" placeholder="أختر التاريخ"
                                           data-input />
                                    <span class="input-group-text input-group-addon" data-toggle>
                                        <i data-feather="calendar"></i>
                                    </span>
                                    <span asp-validation-for="Month" class="text-danger"></span>

                                </div>

                            </div>
                        </div>
                        <div class="col-sm-3">

                            <div class="col-mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <div class="input-group flatpickr flatpickr-date" id="flatpickr-date">
                                    <input asp-for="StartDate" id="StartDate"  class="form-control" placeholder="أختر التاريخ"
                                           data-input />
                                    <span class="input-group-text input-group-addon" data-toggle>
                                        <i data-feather="calendar"></i>
                                    </span>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">

                            <div class="col-mb-3">


                                <label asp-for="EndDate" class="form-label"></label>
                                <div class="input-group flatpickr flatpickr-date" id="flatpickr-date">
                                    <input asp-for="EndDate" id="EndDate"  class="form-control" placeholder="أختر التاريخ"
                                           data-input />
                                    <span class="input-group-text input-group-addon" data-toggle>
                                        <i data-feather="calendar"></i>
                                    </span>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="form-check form-check-inline col-md-2  pt-5  mb-3  ">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Closed" /> @Html.DisplayNameFor(model => model.Closed)
                                </label>
                        </div>

                    </div>

                    <!-- Row -->


                    <input type="submit" value="Create" class="btn btn-primary" />

                    <a asp-action=" Index" class="btn btn-light">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

