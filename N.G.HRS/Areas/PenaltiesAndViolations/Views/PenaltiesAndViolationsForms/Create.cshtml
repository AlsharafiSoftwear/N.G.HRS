@model N.G.HRS.Areas.PenaltiesAndViolations.Models.PenaltiesAndViolationsForms

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = " المخالفات والعقوبات";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}

<h1>Create</h1>

<h4>PenaltiesAndViolationsForms</h4>
<hr />


@* ========================== *@
<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            التهيئة العامة
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            نماذج المخالفات والعقوبات
        </li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">نماذج المخالفات والعقوبات</h6>

                <form asp-action="Create">
                    <div id="Violations" class="row ">
                        <div class="mb-3 col-md-6">
                            
                            <label asp-for="Name" class="form-label">اسم المخالفة</label>
                            <input asp-for="Name" class="form-control" id="exampleInputUsername1" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div  class="mb-3 col-md-6">
                           
                            <label asp-for="ViolationsId"  class="form-label"> نوع المخالفة </label>
                            <select asp-for="ViolationsId" class="form-control" asp-items="ViewBag.ViolationsId">
                                <option value="">  </option>
                            </select>
                        </div>

                        <!-- Row -->
                    </div>



                    <!-- Row -->
                    <div class="mb-3">
                       
                        <label asp-for="Notes" class="form-label">الملاحظات</label>
                        <input asp-for="Notes" class="form-control" id="exampleInputPassword1" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <button type="submit" id="submit" class="btn btn-primary me-2">
                        Submit
                    </button>
                    <button class="btn btn-secondary">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@* ========================== *@
<div>
    <a asp-action="Index">Back to List</a>
</div>
   
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    document.getElementById("submit").addEventListener("click", function (event) {
        const ViolationsId = document.getElementById("ViolationsId");
        if (ViolationsId.value === "") {
            event.preventDefault(); // Prevent form submission
            Swal.fire({
                icon: "error",
                title: "خطئ....",
                text: "رجاء أختر  نوع المخالفة",
            });
        }
    });

</script>