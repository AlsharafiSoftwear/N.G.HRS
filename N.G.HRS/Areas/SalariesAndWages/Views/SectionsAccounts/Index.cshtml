@model IEnumerable<N.G.HRS.Areas.AalariesAndWages.Models.SectionsAccounts>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "الأقسام الحسابات ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinanceAccountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinanceAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sections)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinanceAccountType.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinanceAccount.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sections.SectionsName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
