@model N.G.HRS.Areas.EmployeesAffsirs.Models.AdministrativeDecisions
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}




<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card">
                        <div class="card-header">
                            <h3>إدارة الحالة الوظيفية الموظف</h3>
                        </div>
                        <div class="card-body">
                            <div class="row" style="padding-bottom: 15px;">
                                <div class="col-md-6">
                                    <label asp-for="Date" class="form-label"></label>
                                    <div class="input-group flatpickr flatpickr-date" id="flatpickr-date">
                                        <input asp-for="Date" class="form-control" placeholder="Select time"
                                               data-input />
                                        <span class="input-group-text input-group-addon" data-toggle>
                                            <i data-feather="calendar"></i>
                                        </span>
                                        <span asp-validation-for="Date" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="DecisionsType" class="form-label"></label>
                                    <select asp-for="DecisionsType" class="js-example-basic-single  form-select">
                                        <option value="" disabled selected> </option>
                                        <option value="1"> التوظيف واعتماد الراتب </option>
                                        <option value="2">زيادة الراتب </option>
                                        <option value="3">تخفيض الراتب </option>
                                    </select>
                                    <span asp-validation-for="DecisionsType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row " style="padding-bottom: 15px;">

                                <div class="col-md-6">
                                    <label asp-for="EmployeeId" class="form-label"></label>
                                    <select asp-for="EmployeeId" class="js-example-basic-single  form-select" asp-items="@(ViewData["Employee"] as SelectList)">
                                        <option value="" disabled selected> </option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="EmployeeStatus" class="form-label"></label>
                                    <select asp-for="EmployeeStatus" class="js-example-basic-single  form-select" asp-items="@(ViewData["Status"] as SelectList)">
                                        <option value="" disabled selected> </option>
                                    </select>
                                    <span asp-validation-for="EmployeeStatus" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="SalaryStartDate" class="form-label"></label>
                                    <div class="input-group flatpickr flatpickr-date" id="flatpickr-date">
                                        <input asp-for="SalaryStartDate" class="form-control" placeholder="Select time"
                                               data-input />
                                        <span class="input-group-text input-group-addon" data-toggle>
                                            <i data-feather="calendar"></i>
                                        </span>
                                        <span asp-validation-for="SalaryStartDate" class="text-danger"></span>

                                    </div>

                                </div>
                            </div>
                            <div class="row " style="padding-bottom: 15px;">
                                <div class="col-md-5">
                                    <label asp-for="Salary" class="form-label"></label>
                                    <input asp-for="Salary" class="form-control" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="CurrencyId" class="form-label"></label>
                                    <select asp-for="CurrencyId" class="js-example-basic-single  form-select" asp-items="@(ViewData["Currency"] as SelectList)">
                                        <option value="" disabled selected> </option>
                                    </select>
                                </div>
                            </div>

                            <div class="row " style="padding-bottom: 15px;">
                                <div class="col-md-12">
                                    <label asp-for="EmployeementReson" class="form-label"></label>
                                    <input asp-for="EmployeementReson" class="form-control" />
                                    <span asp-validation-for="EmployeementReson" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="row " style="padding-bottom: 15px;">
                                <div class="col-md-12">
                                    <label asp-for="EmployeementOn" class="form-label"></label>
                                    <input asp-for="EmployeementOn" class="form-control" />
                                    <span asp-validation-for="EmployeementOn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row " style="padding-bottom: 15px;">
                                <div class="col-md-12">
                                    <label asp-for="Note" class="form-label"></label>
                                    <input asp-for="Note" class="form-control" />
                                    <span asp-validation-for="Note" class="text-danger"></span>
                                </div>
                            </div>


                                        <input type="submit" id="submit" value="إنشاء" class="btn btn-primary" />
                                        <a asp-action="Index" class="btn btn-light">رجوع للقائمة</a>


                            </div>
                        </div>

                </form>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>بيانات الموظف الحالية</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <label class="form-label"> الفرع</label>
                                <input type="text" class="form-control" placeholder="الفرع" id="branch" readonly />

                            </div>
                            <div class="col-sm-12">
                                <label class="form-label">رقم الموظف</label>
                                <input type="text" class="form-control" placeholder="رقم الموظف" id="employeeNo" readonly />

                            </div>
                            <div class="col-sm-12">
                                <label class="form-label"> الوظيفة</label>
                                <input type="text" class="form-control" placeholder="الوظيفة" id="employeeStatus" readonly />

                            </div>

                            <div class="col-md-12">
                                <label class="form-label">تاريخ التوظيف</label>
                                <div class="input-group flatpickr " id="flatpickr-time">
                                    <input type="date" class="form-control" id="dateOfHire" placeholder="تاريخ التوظيف" readonly data-input />

                                    <span class="input-group-text input-group-addon" data-toggle>
                                        <i data-feather="calendar"></i>
                                    </span>

                                </div>

                            </div>
                            <div class="col-sm-12">
                                <label class="form-label">الراتب </label>
                                <input type="text" class="form-control" placeholder=" الراتب" id="employeeNo" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#employee").on("change", function () {
                var id = this.value;
                if (id != "") {

                    $.ajax({
                        url: '/EmployeesAffsirs/EmploymentStatusManagements/EmployeeData?id=' + id,
                        type: 'GET',
                        success: function (data) {
                            $('#dateOfHire').val(data.dateOfEmployment);
                            $('#dateOfstiky').val(data.placementDate);
                            $('#select').val(data.employmentStatus).change();
                            switch (data.employmentStatus) {
                                case "1":
                                    $('#employeeStatus').val("مثبت");
                                    break;
                                case "2":
                                    $('#employeeStatus').val("متعاقد");
                                    break;
                                case "3":
                                    $('#employeeStatus').val("متدرب");
                                    break;
                                case "4":
                                    $('#employeeStatus').val("مستمر");
                                    break;
                                case "5":
                                    $('#employeeStatus').val("موقف");
                                    break;
                                case "6":
                                    $('#employeeStatus').val("تم إنهاء الخدمة");
                                    break;
                                case "7":
                                    $('#employeeStatus').val("حارس أمن");
                                    break;
                                default:
                                    $('#employeeStatus').val(data.employmentStatus);
                                    break;

                            }

                        }
                    });
                }
                else {
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء أختيار موظف",
                    });
                    const status = document.getElementById("employeeStatus");
                    const dateOfHire = document.getElementById("dateOfHire");
                    const dateOfstiky = document.getElementById("dateOfstiky");
                    status.value = "";
                    dateOfHire.value = "";
                    dateOfstiky.value = "";
                    $('#select').val("").change();
                    event.preventDefault();
                }

            });
            //===============================================
            $("#submit").click(function () {
                var employee = $("#employee").val();
                var select = $("#select").val();
                if (employee == "") {
                    event.preventDefault();
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء أختيار موظف",
                    });
                    event.preventDefault();

                }
                if (select == "") {
                    event.preventDefault();
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء أختيار موظف",
                    });
                    event.preventDefault();

                }
            });


        });
    </script>
    @if (TempData["Message"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "@TempData["Message"]",
            });
        </script>
    }
}

