@model IEnumerable<N.G.HRS.Areas.EmployeesAffsirs.Models.AnnualGoals>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "تبديل الموظفين";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<h1>Index</h1>
<authorize policy="AddPolicy">
    <a asp-action="Create" class="btn btn-primary col-md-1 col-12" style="min-width: 80px; white-space: nowrap; text-align: center;">جديد</a>
</authorize>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
                <td>
                    <authorize policy="EditPolicy">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </authorize> |
                    <authorize policy="DetailsPolicy">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </authorize> |
                    <authorize policy="DeletePolicy">
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </authorize>
                </td>
        </tr>
}
    </tbody>
</table>
