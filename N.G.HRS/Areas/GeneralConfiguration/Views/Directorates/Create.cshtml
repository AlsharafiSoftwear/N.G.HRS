@model N.G.HRS.Areas.GeneralConfiguration.Models.Directorate
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = " المديريات";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="card">
                        <div class="card-header">
                            <h3>المديريات</h3>
                        </div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" id="Directorate" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-4">
                                    <label asp-for="GovernorateId" class="control-label"></label>
                                    <select asp-for="GovernorateId" class="js-example-basic-single form-select" asp-items="ViewBag.GovernorateId" as SelectList>

                                        <option value="" selected disabled></option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Notes" class="control-label"></label>
                                <input asp-for="Notes" id="DirectorateNotes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" id="submit" value="حفظ " class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light">رجوع للقائمة</a>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- جدول البيانات المؤقتة -->
<table id="temporaryTable" class="table" style="display:none;">
    <thead>
        <tr>
            <th>#</th>
            <th> المديريات</th>
            <th>المحافظة</th>
            <th>الملاحظات</th>

        </tr>
    </thead>
    <tbody></tbody>
</table>

<input type="submit" value=" حفظ البيانات " class="btn btn-primary me-2" id="saveDataBtn" />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script>
        $(document).ready(function () {
            var counter = 1;

            // دالة تقوم بحفظ البيانات المعروضة في الجدول قبل إرسالها إلى الخادم
            $("#saveDataBtn").click(function () {
                $("#temporaryTable tr").each(function () {
                    var directorate = $(this).find("td:eq(1)").text();
                    var notes = $(this).find("td:eq(2)").text();
                    var governorateName = $(this).find("td:eq(3)").text();     // استخراج اسم المحافظة
                    var governorateId = $(this).find("td:eq(4)").text();// استخراج Id الدولة
                    if (directorate) {
                        SaveDirectorateyData(directorate, notes ? notes : "", governorateId);
                    }
                });
            });

            $("form").submit(function (event) {
                event.preventDefault();
                var directorate = $("#Directorate").val();
                var notes = $("#DirectorateNotes").val();
                var governorateId = $("#GovernorateId").val();
                var governorateName = $("#GovernorateId option:selected").text(); // استخراج اسم الدولة



                // تحقق فقط من مديرية لا غير
                if (directorate) {
                    $("#temporaryTable tbody").append(
                        "<tr>" +
                        "<td>" + counter + "</td>" +
                        "<td contenteditable='true' class='directorate'>" + directorate + "</td>" +
                        "<td contenteditable='true' class='notes'>" + notes + "</td>" +
                        "<td contenteditable='true' class='governorateName'>" + governorateName + "</td>" + // عرض اسم الدولة
                        "<td style='display:none' class='governorateId'>" + governorateId + "</td>" + // إضافة Id الدولة (لإرساله إلى الخادم)
                        "<td>" + "<button type='button' class='btn btn-danger delete-row'>Delete</button>" + "</td>" +
                        "</tr>"
                    );
                    counter++;
                    $("#Directorate").val('');
                    $("#DirectorateNotes").val('');
                    $("#GovernorateId").val('');

                    $("#temporaryTable").show();
                }
            });

            $(document).on("click", ".delete-row", function () {
                $(this).closest("tr").remove();
                counter--;
            });
        });

        function SaveDirectorateyData(directorate, notes, governorateId) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("SaveDirectorateyData", "Directorates")",
                data: { directorate: directorate, notes: notes, governorateId: governorateId },
                success: function (response) {
                    // alert("تم حفظ البيانات بنجاح!");
                    // لاحاجة لعرض رسالة النجاح، فقط قم بتوجيه المستخدم إلى الصفحة Index
                    window.location.href = "@Url.Action("Index")";
                },
                error: function (xhr, status, error) {
                    alert("حدث خطأ أثناء حفظ البيانات: " + error);
                }
            });
        }


        $("#submit").click(function () {
            var GovernorateId = $("#GovernorateId").val();
            var select = $("#select").val();
            if (GovernorateId == "") {
                event.preventDefault();
                Swal.fire({
                    icon: "error",
                    title: "الرجاء أختيار المحافظة",
                });
                event.preventDefault();

            }

        });


    </script>



}
